{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd services/service-registry && ./mvnw clean package -DskipTests"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "cd services/service-registry && java -jar target/*.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
